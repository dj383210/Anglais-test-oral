        let currentIndex = 0;
        let scores = [];
        let recognition = null;
        let isRecording = false;

        function initSpeechRecognition() {
            if ('webkitSpeechRecognition' in window) {
                recognition = new webkitSpeechRecognition();
            } else if ('SpeechRecognition' in window) {
                recognition = new SpeechRecognition();
            } else {
                alert("Votre navigateur ne supporte pas la reconnaissance vocale. Utilisez Chrome, Edge ou Safari.");
                return false;
            }

            recognition.lang = 'en-US';
            recognition.continuous = false;
            recognition.interimResults = false;
            recognition.maxAlternatives = 1;

            recognition.onresult = function(event) {
                const transcript = event.results[0][0].transcript;
                checkPronunciation(transcript);
            };

            recognition.onerror = function(event) {
                console.error('Erreur de reconnaissance:', event.error);
                const recordBtn = document.getElementById('record-btn');
                recordBtn.textContent = 'ð¤ Appuyez pour parler';
                recordBtn.classList.remove('recording');
                isRecording = false;

                if (event.error === 'no-speech') {
                    showError("Aucun son dÃ©tectÃ©. RÃ©essayez.");
                } else if (event.error === 'not-allowed') {
                    showError("AccÃ¨s au microphone refusÃ©. Autorisez l'accÃ¨s dans les paramÃ¨tres.");
                } else {
                    showError("Erreur: " + event.error);
                }
            };

            recognition.onend = function() {
                const recordBtn = document.getElementById('record-btn');
                recordBtn.textContent = 'ð¤ Appuyez pour parler';
                recordBtn.classList.remove('recording');
                isRecording = false;
            };

            return true;
        }

        function displayQuestion() {
            const current = sentences[currentIndex];
            document.getElementById('sentence').textContent = current.en;
            document.getElementById('phonetic').textContent = current.phonetic;
            document.getElementById('translation').textContent = current.fr;
            document.getElementById('current-question').textContent = currentIndex + 1;
            document.getElementById('result-section').innerHTML = '';
            document.getElementById('next-btn').style.display = 'none';
        }

        function speakSentence() {
            const text = sentences[currentIndex].en;
            speechSynthesis.cancel();

            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'en-US';
            utterance.rate = 0.8;
            utterance.pitch = 1.0;
            utterance.volume = 1;

            speechSynthesis.speak(utterance);
        }

        function toggleRecording() {
            if (!recognition) {
                if (!initSpeechRecognition()) return;
            }

            const recordBtn = document.getElementById('record-btn');

            if (isRecording) {
                recognition.stop();
                recordBtn.textContent = 'ð¤ Appuyez pour parler';
                recordBtn.classList.remove('recording');
                isRecording = false;
            } else {
                recognition.start();
                recordBtn.textContent = 'ð´ Enregistrement... (parlez maintenant)';
                recordBtn.classList.add('recording');
                isRecording = true;
            }
        }

        function normalizeText(text) {
            return text.toLowerCase()
                .replace(/[.,!?;:]/g, '')
                .replace(/\s+/g, ' ')
                .trim();
        }

        function checkPronunciation(transcript) {
            const expected = normalizeText(sentences[currentIndex].en);
            const said = normalizeText(transcript);

            const expectedWords = expected.split(' ');
            const saidWords = said.split(' ');

            let correctWords = 0;
            const comparison = [];

            expectedWords.forEach((word, index) => {
                if (saidWords[index] && saidWords[index] === word) {
                    correctWords++;
                    comparison.push({ word: word, status: 'correct' });
                } else if (saidWords[index]) {
                    comparison.push({ word: word, status: 'incorrect', said: saidWords[index] });
                } else {
                    comparison.push({ word: word, status: 'missing' });
                }
            });

            const accuracy = Math.round((correctWords / expectedWords.length) * 100);
            scores.push(accuracy);
            updateAverageScore();

            displayResult(transcript, accuracy, comparison);
        }

        function displayResult(transcript, accuracy, comparison) {
            const resultSection = document.getElementById('result-section');
            
            let className = 'error';
            let title = 'â Ã amÃ©liorer';
            if (accuracy >= 90) {
                className = 'success';
                title = 'â Excellent !';
            } else if (accuracy >= 70) {
                className = 'partial';
                title = 'â ï¸ Bien, mais peut mieux faire';
            }

            resultSection.className = 'result-section ' + className;
            resultSection.innerHTML = `
                <div class="result-title">${title}</div>
                <div class="accuracy-meter">
                    <div class="accuracy-bar">
                        <div class="accuracy-fill" style="width: ${accuracy}%">${accuracy}%</div>
                    </div>
                </div>
                <div class="transcription">
                    <strong>Vous avez dit:</strong> "${transcript}"
                </div>
                <div class="word-comparison">
                    ${comparison.map(item => {
                        if (item.status === 'correct') {
                            return `<span class="word correct">${item.word}</span>`;
                        } else if (item.status === 'incorrect') {
                            return `<span class="word incorrect">${item.word} (dit: ${item.said})</span>`;
                        } else {
                            return `<span class="word missing">${item.word} (manquant)</span>`;
                        }
                    }).join('')}
                </div>
            `;

            document.getElementById('next-btn').style.display = 'block';
        }

        function showError(message) {
            const resultSection = document.getElementById('result-section');
            resultSection.className = 'result-section error';
            resultSection.innerHTML = `
                <div class="result-title">â ï¸ Erreur</div>
                <div class="transcription">${message}</div>
            `;
        }

        function updateAverageScore() {
            if (scores.length > 0) {
                const avg = Math.round(scores.reduce((a, b) => a + b, 0) / scores.length);
                document.getElementById('avg-score').textContent = avg + '%';
            }
        }

        function nextQuestion() {
            currentIndex++;
            if (currentIndex >= sentences.length) {
                showFinalScreen();
            } else {
                displayQuestion();
            }
        }

        function showFinalScreen() {
            document.getElementById('quiz-section').style.display = 'none';
            document.getElementById('final-section').style.display = 'block';

            const avg = Math.round(scores.reduce((a, b) => a + b, 0) / scores.length);
            document.getElementById('final-score').textContent = avg + '%';

            let message = '';
            if (avg >= 90) {
                message = 'ð Excellente prononciation ! Vous maÃ®trisez parfaitement !';
            } else if (avg >= 70) {
                message = 'ð Bonne prononciation ! Continuez Ã  pratiquer !';
            } else if (avg >= 50) {
                message = 'ðª Pas mal ! Encore un peu de pratique et ce sera parfait !';
            } else {
                message = 'ð Continuez Ã  vous entraÃ®ner, vous progresserez !';
            }

            document.getElementById('final-message').textContent = message;
        }

        function restartQuiz() {
            currentIndex = 0;
            scores = [];
            document.getElementById('quiz-section').style.display = 'block';
            document.getElementById('final-section').style.display = 'none';
            document.getElementById('avg-score').textContent = '0%';
            displayQuestion();
        }

        // Initialisation
        window.onload = function() {
            displayQuestion();
            initSpeechRecognition();
        };
    </script>
</body>
</html>
